
    <%- include("./partials/header")  %>
    <div class="container vertical-center">
        <div class="jumbotron " >
          <div class="col d-flex justify-content-center">
            <div class="card border-dark mb-3" style="width: 30rem; justify-content: center;">
                <div class="card-body" style="justify-content: center;">
                  <img src="<%=movie.Poster%>" class="card-img-top" style='height: 500px; object-fit: cover;' onerror="this.onerror=null;this.src='/images/error2.jpg'">
                  <br>
                  <br>
                  <h3 class="card-title" style="justify-content: center;"><%=movie.Title%></h3>
                  <br>
                  <br>
                  <p class="card-text"><b>Year : </b><%=movie.Year%></p>
                  <p class="card-text"><b>Rated : </b><%=movie.Rated%></p>
                  <p class="card-text"><b>Released :</b> <%=movie.Released%></p>
                  <p class="card-text"><b>BoxOffice : </b><%=movie.BoxOffice%></p>
                  <p class="card-text"><b>Runtime : </b><%=movie.Runtime%></p>
                  <p class="card-text"><b>Genre : </b><%=movie.Genre%></p>
                  <p class="card-text"><b>Director : </b><%=movie.Director%></p>
                  <p class="card-text"><b>Writer : </b><%=movie.Writer%></p>
                  <p class="card-text"><b>Actors :</b> <%=movie.Actors%></p>
                  <p class="card-text"><b>Language : </b>Language : <%=movie.Language%></p>
                  <p class="card-text"><b>Country : </b><%=movie.Country%></p>
                  <p class="card-text"><b>Awards : </b><%=movie.Awards%></p>
                  <p class="card-text"><b>Ratings : </b></p>
                  <ul class="card-text"><%movie.Ratings.forEach(item=>{%>
                       <a href="<%=item.Source%>"></a>            
                   <%})%>
                  </ul>
                  <ul class="card-text">
                      <li><b>MetaScore : </b><%=movie.Metascore%></li>
                      <li><b>Imdb Rating : </b><%=movie.imdbRating%></li>
                      <li><b>Imdb Votes : </b><%=movie.imdbVotes%></li>
                  </ul>
                  <p class="card-text"><b>Plot:</b><br><%=movie.Plot%> </p>
                </div>
            </div>
        </div>
      </div>
    </div>
    <%- include("./partials/footer")  %>